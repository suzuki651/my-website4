<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    
    <!-- Python アプリケーション用ハンドラー設定 -->
    <handlers>
      <remove name="PythonHandler" />
      <add name="PythonHandler" 
           path="*" 
           verb="*" 
           modules="httpPlatformHandler" 
           resourceType="Unspecified" />
    </handlers>
    
    <!-- HTTP Platform Handler 設定 -->
    <httpPlatform 
      processPath="python" 
      arguments="startup.py"
      stdoutLogEnabled="true"
      stdoutLogFile="logs\python.log"
      startupTimeLimit="120"
      requestTimeout="00:10:00">
      
      <!-- 環境変数の設定 -->
      <environmentVariables>
        <environmentVariable name="PYTHONPATH" value="." />
        <environmentVariable name="PYTHONUNBUFFERED" value="1" />
        <environmentVariable name="AZURE_ENV" value="1" />
        <environmentVariable name="AZURE_SQL_CONNECTIONSTRING" value="Server=tcp:tmcdsys.database.windows.net,1433;Initial Catalog=tmcddb;Persist Security Info=False;User ID=as;Password=tmcd1965@@;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;" />
      </environmentVariables>
    </httpPlatform>
    
    <!-- HTTPリダイレクト設定（HTTPS強制） -->
    <rewrite>
      <rules>
        <!-- HTTP to HTTPS リダイレクト -->
        <rule name="Force HTTPS" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTPS}" pattern="^OFF$" ignoreCase="true" />
            <add input="{HTTP_HOST}" pattern="localhost" negate="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:0}" 
                  appendQueryString="true" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- セキュリティヘッダー設定 -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains" />
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
        <add name="Content-Security-Policy" value="default-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://unpkg.com https://cdn.jsdelivr.net; img-src 'self' data: blob:; media-src 'self' blob:;" />
      </customHeaders>
    </httpProtocol>
    
    <!-- 静的ファイルの設定 -->
    <staticContent>
      <!-- キャッシュ設定 -->
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="1.00:00:00" />
      
      <!-- MIME タイプ設定 -->
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
      <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
      <mimeMap fileExtension=".db" mimeType="application/octet-stream" />
    </staticContent>
    
    <!-- エラーページ設定 -->
    <httpErrors errorMode="Custom" defaultResponseMode="ExecuteURL">
      <remove statusCode="404" />
      <remove statusCode="500" />
      <error statusCode="404" responseMode="ExecuteURL" path="/error/404" />
      <error statusCode="500" responseMode="ExecuteURL" path="/error/500" />
    </httpErrors>
    
    <!-- 圧縮設定 -->
    <httpCompression>
      <dynamicTypes>
        <add mimeType="application/json" enabled="true" />
        <add mimeType="application/javascript" enabled="true" />
        <add mimeType="text/css" enabled="true" />
        <add mimeType="text/html" enabled="true" />
        <add mimeType="text/plain" enabled="true" />
      </dynamicTypes>
      <staticTypes>
        <add mimeType="application/javascript" enabled="true" />
        <add mimeType="text/css" enabled="true" />
        <add mimeType="text/html" enabled="true" />
      </staticTypes>
    </httpCompression>
    
    <!-- デフォルトドキュメント設定 -->
    <defaultDocument>
      <files>
        <clear />
        <add value="startup.py" />
      </files>
    </defaultDocument>
    
    <!-- Azure App Service用の追加設定 -->
    <security>
      <requestFiltering>
        <!-- ファイルアップロードサイズ制限（16MB） -->
        <requestLimits maxAllowedContentLength="16777216" />
      </requestFiltering>
    </security>
    
  </system.webServer>
  
  <!-- アプリケーション設定 -->
  <appSettings>
    <!-- Python バージョン指定 -->
    <add key="PYTHON_VERSION" value="3.11" />
    
    <!-- ログレベル設定 -->
    <add key="LOG_LEVEL" value="INFO" />
    
    <!-- タイムゾーン設定 -->
    <add key="TZ" value="Asia/Tokyo" />
    
    <!-- Azure App Service 最適化 -->
    <add key="AZURE_OPTIMIZE" value="true" />
  </appSettings>
  
</configuration>

